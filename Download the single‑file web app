  <script type="text/babel">
    const { useEffect, useMemo, useRef, useState } = React;
    const LS_KEY = "mfs_singlefile_v1";
    const intervals = [1,2,4,7,14,30];

    const dayPlan = Array.from({length:30}, (_,i)=>i+1).map((d)=>{
